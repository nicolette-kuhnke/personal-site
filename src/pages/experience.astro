---

import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.astro';
import TechnologyCard from '../components/TechnologyCard.astro';
import Footer from '../components/Footer.astro';

const technologies = [
   { "title" : "Languages" , "items" : ["Javascript","HTML","CSS","Python","PHP","Fantom","C#","Visual Basic" ] },
   { "title" : "Libraries" , "items" : ["Angularjs","Svelte","Highcharts","D3","Astro"] },
   { "title" : "Tools/Utility" , "items" : ["Git / GitHub","Postman","AWS","VScode"] },
   { "title" : "Database" , "items" : ["PostgreSQL","Microsoft SQL","Folio (SkySpark)"] },
   { "title" : "OS" , "items" : ["Linux","Windows 10","Windows Server"] },
]

---
<html lang="en">
    <head>
		<MainHead title="Nicolette's Experience" description="Nicolette's skills & work experience" />
	</head>
    <body>
        <Nav/>
        <section class="experience">
            <div class="experience__inner wrapper">
                <div class="experience__content">

                    <h3 class="experience__title text-align-center">
                        Work Experience
                    </h3>

                    <div class="experience__timeline">
                        <div class="experience__timeline-split timeline-left">
                            <div class="timeline-content">
                                <h4>
                                    2008 - 2011 
                                </h4>
                                <p>
                                    Vocational education at 
                                    <a href="https://www.ntsystems.de" target="_blank" >
                                        NTSystems
                                    </a> 
                                    to become a Computer Science Expert ( Subject Area: Software Development )
                                </p>
                            </div>
                        </div>
                        <div class="experience__timeline-split timeline-right">
                            <div class="timeline-content">
                                <h4>
                                   April 2012 - October 2012
                                </h4>
                                <p>
                                    Frontend Developer at 
                                    <a href="https://www.ozgreenenergy.com.au/">
                                        OzGreen Energy Pty Ltd
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="experience__timeline-split timeline-left">
                            <div class="timeline-content">
                                <h4>
                                    October 2012 - February 2013  
                                </h4>
                                <p>
                                    Frontend Developer at 
                                    Hubble Enterprises Pty Ltd
                                </p>
                            </div>
                        </div>
                        <div class="experience__timeline-split timeline-right">
                            <div class="timeline-content">
                                <h4>
                                   March 2013 - 2022
                                </h4>
                                <p>
                                    Frontend Developer at 
                                    <a href="https://www.ozgreenenergy.com.au/">
                                        OzGreen Energy Pty Ltd
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>

                    <h3 class="experience__title text-align-center">
                        Technologies Used
                    </h3>

                    <div class="experience__technology">

                        {
                          technologies.map( (technology) => (
                            <TechnologyCard title={technology.title} listItems={technology.items} />
                          ))  
                        }
                      
                    </div>

                </div>
            </div>
           
        </section>
        <Footer/>
    </body>
</html>

<style lang="scss">

        .experience {
            min-height: 100vh;
			position: relative;

            &__inner {
                margin-top: 14rem;
            }

            &__title {
                margin-top: 8rem;
                margin-bottom: 3rem;
            }

            &__timeline {

                position: relative;
                width: 100%;
        
                &::after{
                    content: '';
                    position: absolute;
                    width: 6px;
                    background-color: var(--color-primary);
                    top: 0;
                    bottom: 0;
                    left: 50%;
                    margin-left: -3px;

                    @media screen and (max-width: 700px) {
                        left: 90%;
                    }
                }

            }

            &__timeline-split {
        
                position: relative;
                width: 50%;

                
                @media screen and (max-width: 700px) {
                    width: 90%;
                }

                &::after {
                    content: '';
                    position: absolute;
                    width: 3rem;
                    height: 3rem;
                    right: -15px;
                    background-color: var(--color-light);
                    border: 4px solid var(--color-primary);
                    top: 15px;
                    border-radius: 50%;
                    z-index: 1;
                }

            }

            &__technology{
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
            }

		}

        .timeline-content {
            border: 6px solid var(--color-primary);
            position: relative;
            margin: 1rem 4rem;
            padding: 1rem 4rem;
            border-radius: 1rem;
        }

        .timeline-left {
            left: 0;

            &::before {
                content: " ";
                height: 0;
                position: absolute;
                top: 22px;
                width: 0;
                z-index: 1;
                right: 30px;
                border: medium solid var(--color-primary);
                border-width: 10px 0 10px 10px;
                border-color: transparent transparent transparent var(--color-primary);
            }
        }

        .timeline-right {
            left: 50%;
            
            @media screen and (max-width: 700px) {
                left: 0;
            }

            &::after{
                left: -15px;  

                @media screen and (max-width: 700px) {
                   left: auto;
                }
            }

            &::before {

                content: " ";
                height: 0;
                position: absolute;
                top: 22px;
                width: 0;
                z-index: 1;
                left: 30px;
                border: medium solid var(--color-primary);
                border-width: 10px 10px 10px 0;
                border-color: transparent var(--color-primary) transparent transparent;

                @media screen and (max-width: 700px) {
                    right: 30px;
                    left: auto;
                }
            }
        }

</style>