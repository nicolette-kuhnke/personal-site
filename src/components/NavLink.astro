---

const { path } = Astro.props;
const url = new URL(Astro.request.url);

let activeClass;
if( '/' + path === url.pathname ){
    activeClass = { active : true };
}else{
    activeClass = { active : false };
}

---
<li class="nav__item">
    <a class:list={[ activeClass ]} href={"/" + path}>
        {path}
    </a>
</li>

<style lang="scss">

    a {
        font-size: 2.2rem;
        font-weight: bold;
        color: inherit;
        text-decoration: none;

        @media ( max-width: 1200px ) {
            font-size: 2rem;
        }

    }

    .nav {

        &__item {
            padding: 1.5rem 1rem;  
        }

    }

    .active {
        color: var(--color-primary);
    }

</style>